#!/bin/sh

config_file="$HOME/.config/logout-menu/fuzzel.ini"

#input option
option=$(echo -e "\n\n\n" | fuzzel --dmenu --config=$config_file)

#command execution
case $option in
  )
    swaymsg exit
    ;;
  )
    $HOME/.local/bin/lock
    ;;
  )
    systemctl poweroff
    ;;
  )
    systemctl reboot
    ;;
  *)
esac
